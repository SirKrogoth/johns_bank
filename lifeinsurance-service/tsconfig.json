{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
     "ms-commons/*": ["../__commons__/src/*"],
     "account-service/*": ["../account-service/src/*"]
    },
    "rootDirs": [
      "./src/", 
      "../__commons__/src",
      "../account-service/src"
    ],
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["__tests__"]
}
